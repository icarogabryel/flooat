// Description: Debugging configuration (for VS Code) to launch the current file in the test folder

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "cwd": "${workspaceFolder}/test",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}